@{
  Layout = "_Layout";
}


@using Factory.Models;
@model List<Factory.Models.Machine>

<h1>Factory Assets:</h1>
<h1>Machines</h1>

@if (@Model.Count == 0)
{
  <h3>No Machines have been instantiated.</h3>
}
@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name} " + " || " + $"{machine.Type}", "Details", new { id = machine.MachineId })</li>
}

